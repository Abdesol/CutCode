<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CutCode.CrossPlatform"
             xmlns:sys="using:System"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             x:Class="CutCode.CrossPlatform.App">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <FontFamily x:Key="poppins_semibold">/Assets/Fonts/Poppins-SemiBold.ttf</FontFamily>
    <FontFamily x:Key="poppins_regular">/Assets/Fonts/Poppins-Regular.ttf</FontFamily>
    <FontFamily x:Key="firacode">/Assets/Fonts/FiraCode-Regular.ttf</FontFamily>
  </Application.Resources>
  <Application.Styles>
    <FluentTheme Mode="Dark"/>
    <StyleInclude Source="avares://Aura.UI.FluentTheme/AuraUI.xaml"/>
    <StyleInclude Source="/Styles/CustomButtonStyles.axaml"/>
    <StyleInclude Source="/Styles/CustomScrollBarStyle.axaml"/>

  </Application.Styles>
  
</Application>
