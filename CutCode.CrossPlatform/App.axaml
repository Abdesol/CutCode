<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:CutCode.CrossPlatform"
             xmlns:sys="using:System"
             xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
             x:Class="CutCode.CrossPlatform.App">
  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>

  <Application.Resources>
    <FontFamily x:Key="PoppinsSemibold">avares://CutCode.CrossPlatform/Assets/Fonts/Poppins-SemiBold.ttf#Poppins</FontFamily>
    <FontFamily x:Key="PoppinsRegular">avares://CutCode.CrossPlatform/Assets/Fonts/Poppins-Regular.ttf#Poppins</FontFamily>
    <FontFamily x:Key="InconsolataRegular">avares://CutCode.CrossPlatform/Assets/Fonts/Inconsolata-Regular.ttf#Inconsolata</FontFamily>
  </Application.Resources>
  
  
  <Application.Styles>
    <FluentTheme Mode="Dark"/>
    
    <StyleInclude Source="avares://Aura.UI.FluentTheme/AuraUI.xaml"/>
    
    <StyleInclude Source="/Styles/CustomButtonStyles.axaml"/>
    <StyleInclude Source="/Styles/CustomScrollBarStyle.axaml"/>
    <StyleInclude Source="/Styles/CustomTextBoxStyle.axaml"/>
    <StyleInclude Source="/Styles/CustomToolTip.axaml"/>
    
    <StyleInclude Source="avares://AvaloniaEdit/AvaloniaEdit.xaml" />

  </Application.Styles>
</Application>
