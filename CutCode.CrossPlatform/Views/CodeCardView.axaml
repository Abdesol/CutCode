<Border xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" CornerRadius="10" ClipToBounds="True"
             x:Class="CutCode.CrossPlatform.Views.CodeCardView">
    <Grid ColumnDefinitions="Auto, *">
        <Grid.Background>
            <SolidColorBrush Color="{Binding CardColor}"/>
        </Grid.Background>
        <Image Grid.Column="0" Width="120" Stretch="Uniform" Source="{Binding Language}">
            <Image.Clip>
                <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
            </Image.Clip>
        </Image>
        <StackPanel Grid.Column="1">
            <Label Margin="3,4,3,6"
                   Content="{Binding Title}" 
                   FontFamily="{DynamicResource poppins_semibold}"
                   FontSize="14" FontWeight="Bold">
                <Label.Foreground>
                    <SolidColorBrush Color="{Binding mainTextColor}"/>
                </Label.Foreground>
            </Label>
            <Label Margin="3,0,3,0"
                   Content="{Binding Desc}" 
                   FontFamily="{DynamicResource poppins_semibold}"
                   FontSize="13">
                <Label.Foreground>
                    <SolidColorBrush Color="{Binding mainTextColor}"/>
                </Label.Foreground>
            </Label>
        </StackPanel>
    </Grid>
</Border>
