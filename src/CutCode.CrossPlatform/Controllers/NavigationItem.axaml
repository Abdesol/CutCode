<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CutCode.CrossPlatform.Controllers.NavigationItem"
             xmlns:converters="using:CutCode.CrossPlatform.Converters">

    <UserControl.Resources>
        <converters:StringToGeometryConverter x:Key="StringToGeometryConverter" />
    </UserControl.Resources>
    <StackPanel Orientation="Horizontal" x:Name="MainGrid" HorizontalAlignment="Center">
        <Border x:Name="ActiveBorder" Background="Transparent" CornerRadius="5" BorderBrush="Blue" BorderThickness="1"
                Height="25" />
        <Button Grid.Column="1" x:Name="MainButton" Margin="0 8 8 8" Padding="0 4 4 4">
            <Viewbox Height="25" Width="25" Margin="3 0 0 0">
                <Path x:Name="IconPath" />
            </Viewbox>
        </Button>
    </StackPanel>
</UserControl>